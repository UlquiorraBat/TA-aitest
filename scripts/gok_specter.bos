#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, body, lwing1, rwing1, thrust, lfire, rfire;

static-var  statechg_DesiredState, statechg_StateChanging, Static_Var_3, gun_1;


activatescr()
{
	if( TRUE )
	{
		move lwing1 to x-axis [0.0] speed [6.0];
		move rwing1 to x-axis [0.0] speed [6.0];
		sleep 908;
	}
	sleep 40;
}

deactivatescr()
{
	if( TRUE )
	{
		move lwing1 to x-axis [1.5] speed [6.0];
		move rwing1 to x-axis [-1.5] speed [6.0];
		sleep 908;
	}
	sleep 40;
}

InitState()
{
	statechg_DesiredState = TRUE;
	statechg_StateChanging = FALSE;
}

RequestState(requestedstate, currentstate)
{
	if( statechg_StateChanging )
	{
		statechg_DesiredState = requestedstate;
		return (0);
	}
	statechg_StateChanging = TRUE;
	currentstate = statechg_DesiredState;
	statechg_DesiredState = requestedstate;
	while( statechg_DesiredState != currentstate )
	{
		if( statechg_DesiredState == 0 )
		{
			call-script activatescr();
			currentstate = 0;
		}
		if( statechg_DesiredState == 1 )
		{
			if( Static_Var_3 == 0 )
			{
				call-script deactivatescr();
				currentstate = 1;
			}
			sleep 100;
		}
	}
	statechg_StateChanging = FALSE;
}

SmokeUnit(healthpercent, sleeptime, smoketype)
{
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 400;
	}
	while( TRUE )
	{
		healthpercent = get HEALTH;
		if( healthpercent < 66 )
		{
			smoketype = 256 | 2;
			if( Rand( 1, 66 ) < healthpercent )
			{
				smoketype = 256 | 1;
			}
			emit-sfx smoketype from base;
		}
		sleeptime = healthpercent * 50;
		if( sleeptime < 200 )
		{
			sleeptime = 200;
		}
		sleep sleeptime;
	}
}

Create()
{
	Static_Var_3 = 0;
	gun_1 = 0;
	move lwing1 to x-axis [1.5] now;
	move rwing1 to x-axis [-1.5] now;
	call-script InitState();
	start-script SmokeUnit();
}

Activate()
{
	start-script RequestState(0);
}

Deactivate()
{
	start-script RequestState(1);
}

AimPrimary(heading, pitch)
{
	signal 2;
	set-signal-mask 2;
	return (1);
}

AimFromPrimary(piecenum)
{
	piecenum = body;
}

QueryPrimary(piecenum)
{
	piecenum = lfire;
}

AimSecondary(heading, pitch)
{
	signal 4;
	set-signal-mask 4;
	return (1);
}

AimFromSecondary(piecenum)
{
	piecenum = body;
}

QuerySecondary(piecenum)
{
	piecenum = rfire;
}

SweetSpot(piecenum)
{
	piecenum = base;
}

Killed(severity, corpsetype)
{
	if( severity <= 50 )
	{
		corpsetype = 2;
		explode body type NOHEATCLOUD;
		explode lwing1 type NOHEATCLOUD;
		explode rwing1 type NOHEATCLOUD;
		return (corpsetype);
	}
	corpsetype = 3;
	explode body type NOHEATCLOUD;
	explode lwing1 type NOHEATCLOUD;
	explode rwing1 type NOHEATCLOUD;
	return (corpsetype);
}
